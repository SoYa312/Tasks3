import tkinter as tk


def count_unique_words():
    text = text_entry.get("1.0", "end-1c").lower()
    unique_words = set(text.split())
    unique_word_count = len(unique_words)
    result_label.config(text=f"Кількість унікальних слів: {unique_word_count}")


window = tk.Tk()
window.title("Рахування унікальних слів")

tk.Label(window, text="Введіть рядок:").pack()

text_entry = tk.Text(window, height=10, width=40)
text_entry.pack()

tk.Button(window, text="Рахувати", command=count_unique_words).pack()

result_label = tk.Label(window, text="")
result_label.pack()

window.mainloop()
