import tkinter as tk
import re


def count_numbers():
    text = text_entry.get("1.0", "end-1c")

    numbers = re.findall(r"\d+", text)
    unique_numbers = set(numbers)

    total_count = 0
    result_text = ""
    for number in unique_numbers:
        count = numbers.count(number)
        total_count += count
        result_text += f"\"{number}\" : {count} раз\n"

    result_text += f"\nЗагальна кількість чисел: {total_count}"
    result_label.config(text=result_text)


window = tk.Tk()
window.title("Підрахунок чисел")

tk.Label(window, text="Введіть рядок:").pack()

text_entry = tk.Text(window, height=10, width=40)
text_entry.pack()

tk.Button(window, text="Рахувати", command=count_numbers).pack()

result_label = tk.Label(window, text="")
result_label.pack()

window.mainloop()
