import tkinter as tk


def count_word_frequency():
    text = text_entry.get("1.0", "end-1c").lower()
    words = text.split()
    word_counts = {}

    for word in words:
        word_counts[word] = word_counts.get(word, 0) + 1

    repeated_words = [word for word, count in word_counts.items() if count > 2]
    repeated_words_count = len(repeated_words)

    result_text = "\n\n".join([f"\"{word}\" ({word_counts[word]} раз)" for word in repeated_words])

    result_text += f"\n\nКількість слів, що зустрічаються більше ніж 2 рази: {repeated_words_count}"
    result_label.config(text=result_text)


window = tk.Tk()
window.title("Частота використання слів")

tk.Label(window, text="Введіть рядок:").pack()

text_entry = tk.Text(window, height=10, width=40)
text_entry.pack()

tk.Button(window, text="Рахувати", command=count_word_frequency).pack()

result_label = tk.Label(window, text="")
result_label.pack()

window.mainloop()
