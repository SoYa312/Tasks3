import tkinter as tk
from tkinter import messagebox


def count_unique_words():
    input_text = text_entry.get("1.0", "end-1c")
    words = input_text.split()
    unique_words = set(words)
    count = len(unique_words)

    messagebox.showinfo("Результат", f"Кількість унікальних слів: {count}")


window = tk.Tk()
window.title("Обчислення унікальних слів")

label = tk.Label(window, text="Введіть рядок:")
label.pack()

text_entry = tk.Text(window, height=10, width=40)
text_entry.pack()

count_button = tk.Button(window, text="Обчислити", command=count_unique_words)
count_button.pack()

window.mainloop()
