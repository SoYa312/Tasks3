import tkinter as tk
from tkinter import messagebox


def count_words_and_sentences():
    input_text = text_entry.get("1.0", "end-1c")
    words = len(input_text.split())
    sentences = len(input_text.split("."))

    messagebox.showinfo("Результат", f"Кількість слів: {words} \n Кількість речень: {sentences}")


window = tk.Tk()
window.title("Обчислення слів та речень")

label = tk.Label(window, text="Введіть рядок:")
label.pack()

text_entry = tk.Text(window, height=10, width=40)
text_entry.pack()

count_button = tk.Button(window, text="Обчислити", command=count_words_and_sentences)
count_button.pack()

window.mainloop()
